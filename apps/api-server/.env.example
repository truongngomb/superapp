# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# PocketBase URL
POCKETBASE_URL=http://localhost:8090

# Admin credentials (Optional - for initial setup/seeding)
# ⚠️ SECURITY: Use environment variables or secret management in production
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=secret

# Global Pagination Defaults
ITEMS_PER_PAGE=20

# Cache Configuration (seconds)
CACHE_DEFAULT_TTL=300
CACHE_CHECK_PERIOD=60

# Rate Limiting (per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_BATCH_MAX=50
RATE_LIMIT_STANDARD_MAX=100

# Authentication (milliseconds)
AUTH_SESSION_MAX_AGE=604800000
OAUTH_STATE_MAX_AGE=3600000

# Realtime & SSE (milliseconds)
SSE_HEARTBEAT_INTERVAL=30000
REALTIME_RECONNECT_DELAY=5000

# Server Management (milliseconds)
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# Retry Logic Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=10000