{
  "name": "@superapp/api-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "db": "tsx src/scripts/migrate.ts",
    "db:status": "tsx src/scripts/migrate.ts --status",
    "db:migrate": "tsx src/scripts/migrate.ts --migrate",
    "db:pull": "tsx src/scripts/migrate.ts --pull",
    "db:seed": "tsx src/scripts/migrate.ts --seed",
    "db:backup": "tsx src/scripts/migrate.ts --backup",
    "db:generate": "tsx src/scripts/migrate.ts --generate"
  },
  "dependencies": {
    "@superapp/shared-types": "workspace:*",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eventsource": "^4.1.0",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "node-cache": "^5.1.2",
    "pocketbase": "^0.26.5",
    "systeminformation": "^5.30.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/eventsource": "^3.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.7",
    "@types/systeminformation": "^3.54.1",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
