{
  "name": "superapp",
  "version": "1.0.0",
  "description": "Ứng dụng mẫu dùng phát triển các ứng dụng cho nhóm",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "client:dev": "npm run dev --workspace=client",
    "server:dev": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "client:build": "npm run build --workspace=client",
    "server:build": "npm run build --workspace=server",
    "lint": "npm run lint --workspace=client && npm run lint --workspace=server",
    "cap:sync": "npm run cap:sync --workspace=client",
    "android:open": "npm run android:open --workspace=client",
    "android:build": "npm run android:build --workspace=client",
    "ios:open": "npm run ios:open --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
